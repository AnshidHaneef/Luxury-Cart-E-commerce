<section>

  <div class="container">
    <h3 style="position: absolute; font-family: monospace; color: aliceblue;
      letter-spacing: 1px;" class="pt-5 pl-5">
      CATEGORIES</h3>
    <img src="/assets/images/Luxury/breadcrumb-bg back.jpg" alt="">
  </div>
</section>


<div class="container-fluid">


  <hr class="mt-0 mb-6">

  <div class="blog-posts mb-4">
    <h2 class="title text-center mb-3">ALL CATEGORIES</h2><!-- End .title text-center -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="owl-carousel owl-simple mb-2" data-toggle="owl" data-owl-options='{
                          "nav": false,
                          "dots": true,
                          "items": 3,
                          "margin": 20,
                          "loop": false,
                          "responsive": {
                          "0": {
                          "items":1
                          },
                          "520": {
                          "items":2
                          },
                          "768": {
                          "items":3
                          },
                          "992": {
                          "items":4
                          }
                          }
                          }'>
              {{#each category}}

              <article class="entry">
                <figure class="entry-media">

                  <a href="/list_category_products/{{this._id}}">
                    <img src="/assets/images/Luxury/blog-8 jacket.jpg" {{!--
                      src="/assets/product-images/{{this._id}}.jpg" --}}
                      alt="image desc">

                  </a>
                </figure><!-- End .entry-media -->

                <div class="entry-body text-center">
                  <h5> {{this.categoryName}} </h5>
                </div><!-- End .entry-body -->
              </article><!-- End .entry -->
              {{/each}}
            </div><!-- End .owl-carousel -->
          </div><!-- End .blog-posts -->
        </div>
      </div>
    </div>
  </div>
</article>




