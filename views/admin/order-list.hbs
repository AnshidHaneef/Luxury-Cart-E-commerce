  

<section>
  
    <div class="container" style="  width: 80%; margin-left: 14rem; margin-top: 2rem; ">
        <table id="adminmyTable" class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Date</th>
      {{!-- <th scope="col">Adress</th>
      <th scope="col">Amount </th> --}}
      <th scope="col">Status</th>
      <th scope="col">Details</th>  
    </tr>

  </thead>
  <tbody>
      
       {{#each orders}}
    <tr>
      <th scope="row">{{increment @key}}</th>
      <td>{{this.date}}</td>

    <td><select name="status" id="status?{{this._id}}" onchange="setStatus('{{this._id}}')"   class="btn btn-dark">
  <option value="{{this.status}}">{{this.status}}</option>
  <option value="delivered">Delivered</option>
  <option value="cancelled">cancelled</option>
  <option value="ordered">Ordered</option>
  <option value="shipped">shipped</option>
  <option value="out for delivery">Out For Delivery</option>
</select></td>

      <td>

     <p>
       <button  class="btn btn-info" data-toggle="collapse" data-target="#1{{this._id}}" type="button" onclick="userDetails('{{this.userId}}','{{this._id}}'); toggle('{{this._id}}')" aria-expanded="false" aria-controls="multiCollapseExample1" style="
    width: 8rem;"> User Details</button>

     <button class="btn btn-info" type="button" data-toggle="collapse" data-target="#2{{this._id}}" aria-expanded="false" aria-controls="multiCollapseExample2" 
     style="width: 10rem;"
     onclick="toggle1('{{this._id}}')">Order details</button>

 
  
   </p>

   <div class="row">
  <div class="col">
    <div class="collapse multi-collapse ud clr" id="1{{this._id}}">
      <div class="card card-body" style="padding: 2rem;">
        <h6>Name:</h6><span id="name{{this._id}}"></span><br>
        <h6>Email:</h6><span id="email{{this._id}}"></span>
        
      </div>
    </div>
  </div>
  <div class="col">
    <div class="collapse multi-collapse dd clr" id="2{{this._id}}" style="
    width: 36rem;">
      <div class="card card-body" style="padding: 2rem;">
        <h5>Address:{{this.deliveryDetails.address}}</h5><br>
        <h5>Payment:{{this.paymentMethod}}</h5><br>
        <h5>Amount:{{this.totalAmount}}</h5><br>
        <h5>Status:{{this.status}}</h5><br>
        <a href="/admin/ordered-products/{{this._id}}" class="btn btn-dark" style="text-align: center;padding-top: 9px;">View Products</a>
      </div>
    </div>
  </div>
</div>

        
      </td>
    </tr>
      {{/each}}

  </tbody>
</table>
 </div>
</section>

<style>
                                .clr {
                                 display: none !important;
                                }

                                .sft {
                                display: block !important;
                                }
</style>

<script>
  function toggle(id) { 
    console.log(id)
    document.getElementById("1"+id).classList.toggle("sft");//user details
    document.getElementById("2"+id).classList.remove("sft");//delivery details
 
  }
   function toggle1(id) {
  document.getElementById("1"+id).classList.remove("sft");
  document.getElementById("2"+id).classList.toggle("sft");

  }

</script>